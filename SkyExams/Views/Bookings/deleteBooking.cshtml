@model SkyExams.Models.Booking
@{
    ViewBag.Title = "deleteBooking";
    var uID = ViewData["uID"];
    var ins = ViewData["ins"];
    var time = ViewData["time"];
}

<h2>Delete Booking</h2>
<p>Are you sure you wish to delete this Booking</p>
<br />
<br />
<dl class="dl-horizontal">
    <dt class="col-md-4">
        @Html.Label("Date and Time:")
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Date_Time)
    </dd>

    <dt class="col-md-4">
        @Html.Label("Instructor:")
    </dt>

    <dd>
        @ins
    </dd>

</dl>
<button type="button" class="btn btn-info" onclick="location.href='@Url.Action("bookingsScreen", "Bookings", new { id = uID })'">
    Back
</button>
<button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("deleteBookingConformation", "Bookings", new { id = uID, bookingId = Model.Booking_ID })'">
    Delete
</button>

<script>
    function timer() {
        window.location.href = '/Sys_User/loginScreen';
    }
    window.oninput = setTimeout(timer, @time);
</script>

