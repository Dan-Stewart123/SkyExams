@model IEnumerable<SkyExams.Models.Instructor_Slots>
@{
    ViewBag.Title = "viewSlots";
    var uID = ViewData["uID"];
}

<h2>Booking slots</h2>
<br />
<br />
<table class="table">
    <thead>
        <tr>
            <th scope="col">Date and Time</th>
            <th scope="col">Booked</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Date_Time)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Booked)
                </td>
                <td scope="row">
                    <button type="button" onclick="location.href='@Url.Action("bookSlot", "Bookings", new { id = uID, slotId = item.Slot_ID })'">
                        Book Slot
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<br />


