@model IEnumerable<SkyExams.Models.Instructor_Slots>
@{
    ViewBag.Title = "viewSlots";
    var uID = ViewData["uID"];
    var ins = ViewData["ins"];
}

<h2>Booking slots</h2>
<br />
<br />
<p>All slots are one hour long bookings</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Date and Time</th>
            <th scope="col">Booked</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Date_Time)
                </td>
                <td scope="row">
                    @ins
                </td>
                <td scope="row">
                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("bookSlot", "Bookings", new { id = uID, slotId = item.Slot_ID })'">
                        Book Slot
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<br />
<button type="button" class="btn btn-info" onclick="location.href='@Url.Action("bookingsScreen", "Bookings", new { id = uID })'">
    Back
</button>

<script>
    function timer() {
        window.location.href = '/Sys_User/loginScreen';
    }
    window.oninput = setTimeout(timer, 300000);
</script>


