@model IEnumerable<SkyExams.Models.Booking>
@{
    ViewBag.Title = "bookingsScreen";
    var uID = ViewData["uID"];
}

<h2>Bookings</h2>
<br />
<div style="text-align:right;">
    <button type="button" class="btn btn-link" id="consult" onclick="location.href='@Url.Action("consultationHelp", "Help", new { id = uID })'">
        Help
    </button>
</div>
<br />
<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("viewSlots", "Bookings", new { id = uID })'">
    Book Consultation
</button>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Date and Time</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Date_Time)
                </td>
                <td scope="row">
                    <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("updateBooking", "Bookings", new { id = uID, bookingId = item.Booking_ID })'">
                        Change Booking
                    </button>
                </td>
                <td scope="row">
                    <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("deleteBooking", "Bookings", new { id = uID, bookingId = item.Booking_ID })'">
                        Cancel Booking
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<br />
<button type="button" class="btn btn-info" onclick="location.href='@Url.Action("homeScreen", "Sys_User", new { id = uID })'">
    Back
</button>

<script>
    function timer() {
        window.location.href = '/Sys_User/loginScreen';
    }
    window.oninput = setTimeout(timer, 300000);
</script>
