@model IEnumerable<SkyExams.Models.Instructor_Slots>
@{
    ViewBag.Title = "updateBooking";
    var uID = ViewData["uID"];
    var bID = ViewData["bID"];
}

<h2>Update Booking</h2>
<br />
<br />
<table class="table">
    <thead>
        <tr>
            <th scope="col">Date and Time</th>
            <th scope="col">Booked</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Date_Time)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Booked)
                </td>
                <td scope="row">
                    <button type="button" onclick="location.href='@Url.Action("updateBookingConformation", "Bookings", new { id = uID, bookingId = bID, slotId = item.Slot_ID })'">
                        Change Booking
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<br />
<button type="button" onclick="location.href='@Url.Action("bookingsScreen", "Bookings", new { id = uID })'">
    Back
</button>

