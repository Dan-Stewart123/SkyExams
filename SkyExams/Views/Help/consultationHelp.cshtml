@model SkyExams.Models.Sys_User
@{
    ViewBag.Title = "consultationHelp";
    var help = ViewData["help"];
    var time = ViewData["time"];
    var role = ViewData["role"];
}

<h2>Consultation Help</h2>
<br />
<button type="button" id="student" style="display:none;" class="btn btn-info" onclick="location.href='@Url.Action("bookingsScreen", "Bookings", new { id = Model.SysUser_ID })'">
    Back
</button>
<button type="button" id="admin" style="display:none;" class="btn btn-info" onclick="location.href='@Url.Action("slotsScreen", "Bookings", new { id = Model.SysUser_ID })'">
    Back
</button>
<br />
<label><b>Exam Consultations</b></label>
<br />
<p>@help</p>

<script>
    function timer() {
        window.location.href = '/Sys_User/loginScreen';
    }
    window.oninput = setTimeout(timer, @time);

    function adminCheck() {
        var userId = @role;
        if (userId == '1') {
            document.getElementById("student").style.display = "block";

        }
        if (userId == '2') {
            document.getElementById("admin").style.display = "block";
            
        }
        if (userId == '3') {
            document.getElementById("admin").style.display = "block";
            
        }
        if (userId == '4') {
            document.getElementById("admin").style.display = "block";
            
        }
    }

    window.onload = adminCheck;
</script>

