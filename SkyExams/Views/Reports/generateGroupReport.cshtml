@model SkyExams.ViewModels.groupStudentVM
@{
    ViewBag.Title = "generateGroupReport";
    var uID = ViewData["userID"];
    var name = ViewData["userName"];
    var time = ViewData["time"];
}

<h2>Generate Group Student Report</h2>
<br />
<dl class="dl-horizontal" id="report">
    <dd class="col-md-4">
        <h3>Group Student Report</h3><br />
        <br />
        <br />
    </dd>

    <dd>
        Generated By: @name
    </dd>

    @foreach (var s in Model.students)
    {
        <dd class="col-md-4">
            <b> @Html.Label("Title:")</b>
        </dd>

        <dd>
            @s.title
        </dd>

        <dd class="col-md-4">
            <b>@Html.Label("Name:")</b>
        </dd>

        <dd>
            @s.name
        </dd>

        <dd class="col-md-4">
            <b>@Html.Label("Licence No:")</b>
        </dd>

        <dd>
            @s.licence
        </dd>

        <dd class="col-md-4">
            <b>@Html.Label("Hours Flown:")</b>
        </dd>

        <dd>
            @s.hoursFlown
        </dd>

        <dd class="col-md-4">
            <b>@Html.Label("Exams:")</b>
        </dd>
        <br />
        <br />
        <dd>
            @foreach (var item in s.examAverages)
            {
                <ul>
                    <li>
                        @Html.DisplayFor(modelItem => item.examName): @Html.Raw(item.examAvg)%
                    </li>
                </ul>
            }
        </dd>
    }
    <dd class="col-md-4">
        <b>@Html.Label("Total Hours Flown for all students:")</b>
    </dd>

    <dd>
        @Model.totHours
    </dd>

    <img src="~/Content/SkyExamsEdited-removebg-preview (1).png" width="150px" height="75px" title="title" alt="additional title" />
    <img src="~/Content/fts_logo.jpeg" width="150px" height="50px" title="title" alt="additional title" />
    <br />
    @DateTime.Now.Year / @DateTime.Now.Month / @DateTime.Now.Day
</dl>
<button type="button" class="btn btn-info" onclick="location.href='@Url.Action("groupReport", "Reports", new { id = uID })'">
    Back
</button>
<button type="button" class="btn btn-primary" id="generate">
    Download Report
</button>

@section groupReportScript
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.2/jspdf.min.js"></script>
    <script>
        function timer() {
            window.location.href = '/Sys_User/loginScreen';
        }
        window.oninput = setTimeout(timer, 300000);
        $('#generate').on('click', function () {
            var pdf = new jsPDF('p', 'pt', 'letter');
            source = $('#report')[0];


            specialElementHandlers = {

            };
            margins = {
                top: 80,
                bottom: 60,
                left: 40,
                width: 522
            };

            pdf.fromHTML(
                source,
                margins.left,
                margins.top, {
                'width': margins.width,
                'elementHandlers': specialElementHandlers
            },


                function (dispose) {
                    pdf.save('groupStudentReport.pdf');
                }, margins
            );
        });

        function timer() {
        window.location.href = '/Sys_User/loginScreen';
    }
    window.oninput = setTimeout(timer, @time);
    </script>
}

