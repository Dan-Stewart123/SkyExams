@model SkyExams.ViewModels.InstructorVM
@{
    ViewBag.Title = "generateInstructorReport";
    var uID = ViewData["userID"];
    var name = ViewData["userName"];
    var time = ViewData["time"];
}

<h2>Generate Instructor Report</h2>
<br />
<dl class="dl-horizontal" id="report">
    <dd class="col-md-4">
        <h2>Instructor Report</h2>
    </dd>

    <dd>
        Generated By: @name
    </dd>

    <dd class="col-md-4">
        <b>@Html.Label("Title:")</b>
    </dd>

    <dd>
        @Model.title
    </dd>

    <dd class="col-md-4">
        <b>@Html.Label("Name:")</b>
    </dd>

    <dd>
        @Model.name
    </dd>

    <dd class="col-md-4">
        <b>@Html.Label("Licence No:")</b>
    </dd>

    <dd>
        @Model.licence
    </dd>

    <dd class="col-md-4">
        <b>@Html.Label("Number of Students:")</b>
    </dd>

    <dd>
        @Model.students
    </dd>

    <dd class="col-md-4">
        <b>@Html.Label("Combined Student Hours Flown:")</b>
    </dd>

    <dd>
        @Model.studentHours
    </dd>

    <dd class="col-md-4">
        <b>@Html.Label("Exams:")</b>
    </dd>
    <br />
    <br />
    <dd>
        @foreach (var item in Model.examAverages)
        {
            <ul>
                <li>
                    @Html.DisplayFor(modelItem => item.examName)
                </li>
                <li>
                    @Html.Raw(item.examAvg)
                </li>
            </ul>
        }
    </dd>

    <img src="~/Content/SkyExamsEdited-removebg-preview (1).png" width="150px" height="75px" title="title" alt="additional title" />
    <img src="~/Content/fts_logo.jpeg" width="150px" height="50px" title="title" alt="additional title" />
    <br />
    @DateTime.Now.Year / @DateTime.Now.Month / @DateTime.Now.Day
</dl>
<button type="button" class="btn btn-info" onclick="location.href='@Url.Action("instructorReport", "Reports", new { id = uID })'">
    Back
</button>
<button type="button" class="btn btn-primary" id="generate">
    Download Report
</button>

@section instructorReportScript
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.2/jspdf.min.js"></script>
    <script>
        function timer() {
            window.location.href = '/Sys_User/loginScreen';
        }
        window.oninput = setTimeout(timer, 300000);
        $('#generate').on('click', function () {
            var pdf = new jsPDF('p', 'pt', 'letter');
            source = $('#report')[0];


            specialElementHandlers = {

            };
            margins = {
                top: 80,
                bottom: 60,
                left: 40,
                width: 522
            };

            pdf.fromHTML(
                source,
                margins.left,
                margins.top, {
                'width': margins.width,
                'elementHandlers': specialElementHandlers
            },


                function (dispose) {
                    pdf.save('instructorReport.pdf');
                }, margins
            );
        });

        function timer() {
        window.location.href = '/Sys_User/loginScreen';
    }
    window.oninput = setTimeout(timer, @time);
    </script>
}


