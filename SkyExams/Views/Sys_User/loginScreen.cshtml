
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm("homeScreen", "Sys_User", FormMethod.Post))
{
    <label>@Html.Label("Username:")</label>
    @Html.TextBox("userName")
    <br />
    <br />
    <label>@Html.Label("Password:")</label>
    <input type="password" id="password" name="password">
    <div>
        @Html.ActionLink("Forgot Password", "forgotPassword")
    </div>
    <br />
    <br />
    <input type="submit" , value="Login" />
    <br />
    <br />
    <div>
        @Html.ActionLink("Request to Register", "registerScreen")
    </div>
}

