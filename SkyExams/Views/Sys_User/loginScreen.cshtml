
@{
    ViewBag.Title = "Login";
    var error = ViewData["err"];
}

<h2>Login</h2>

<label style="color:red">@error</label>

@using (Html.BeginForm("loginScreen", "Sys_User", FormMethod.Post))
{
    <label>@Html.Label("Username:")</label>
    @Html.TextBox("userName")
    <br />
    <br />
    <label>@Html.Label("Password:")</label>
    <input type="password" id="password" name="password">
    <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("forgotPassword", "Sys_User")'">
        Forgot Password
    </button>
    <br />
    <br />
    <input type="submit" class="btn btn-primary", value="Login" />
    <br />
    <br />
    <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("registerScreen", "Sys_User")'">
        Request to Register
    </button>
}

