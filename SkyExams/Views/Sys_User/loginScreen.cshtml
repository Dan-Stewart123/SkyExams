
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm("loginScreen", "Sys_User", FormMethod.Post))
{
    <label>@Html.Label("Username:")</label>
    @Html.TextBox("userName")
    <br />
    <br />
    <label>@Html.Label("Password:")</label>
    <input type="password" id="password" name="password">
    <button type="button" onclick="location.href='@Url.Action("forgotPassword", "Sys_User")'">
        Forgot Password
    </button>
    <br />
    <br />
    <input type="submit" , value="Login" />
    <br />
    <br />
    <button type="button" onclick="location.href='@Url.Action("registerScreen", "Sys_User")'">
        Request to Register
    </button>
}

