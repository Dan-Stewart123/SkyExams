@model SkyExams.Models.Sys_User
@{
    ViewBag.Title = "resetPassword";
}

<h2>Reset Password</h2>
@using (Html.BeginForm("resetPassword", "Sys_User", FormMethod.Post))
{
    <div style="display:none;">
        <input type="text" id="id" name="id" value="@Model.SysUser_ID">
    </div>
    <label>@Html.Label("Old Password:")</label>
    <input type="password" id="oldPass" name="oldPass">
    <br />
    <br />
    <label>@Html.Label("New Password:")</label>
    <input type="password" id="NewPass" name="newPass">
    <label>@Html.Label("Confirm Password:")</label>
    <input type="password" id="confPass" name="confPass">
    <br />
    <br />
    <input type="submit" , value="Confirm" />
    <br />
    <br />
    <div>
        @Html.ActionLink("Cancel", "homeScreen", new { id = Model.SysUser_ID })
    </div>
}

