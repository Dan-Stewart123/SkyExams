@model SkyExams.Models.Student

@{
    ViewBag.Title = "Student Hours";
    var uID = ViewData["userId"];
    var uName = ViewData["userName"];
    var error = ViewData["err"];
}

<h2>Student Hours</h2>

<p>Please complete the following fields</p>
<br />
<label style="color:red">@error</label>

@using (Html.BeginForm("StudentHours", "Sys_User", FormMethod.Post))
{
    <div style="display:none;">
        <input type="text" id="userId" name="userId" value="@uID">
    </div>
    <div style="display:none;">
        <input type="text" id="id" name="id" value="@Model.Student_ID">
    </div>
    <div>
        <label>@uName</label>
        <br />
        <label>@Model.Licence_No</label>
    </div>
    <label class="col-md-3">@Html.Label("Hours Flown:")</label>
    <input class="col-md-3" type="number" id="hoursFlown" name="hoursFlown" value="@Model.Hours_Flown">
    <br />
    <br />
    <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("viewAccount", "Sys_User", new { id = uID})'">
        Cancel
    </button>
    <input type="submit" class="btn btn-primary" , value="Submit" id="submitButton" />
}

<script>
    function timer() {
        window.location.href = '/Sys_User/loginScreen';
    }
    window.oninput = setTimeout(timer, 300000);
</script>
