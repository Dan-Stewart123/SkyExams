                <img src="@Url.Action("getImg", "Lesson_Plan", new { id = modelItem.Plane_Type_ID })" width="280px" height="150px" title="title" alt="additional title" />
            </div>
            <div class="card-footer">
                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("topicScreen", "Lesson_Plan", new { id = uID, topicId = modelItem.Plane_Type_ID})'">
                    View Lesson Plans
                </button>
            </div>
        </div>
    </div>
