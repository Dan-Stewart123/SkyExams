@model SkyExams.Models.Plane
@{
    ViewBag.Title = "deletePlane";
    var uID = ViewData["loggedId"];
    var type = ViewData["planeType"];
    var time = ViewData["time"];
}

<h2>Delete Plane</h2>
<br />
<p>Are you sure you wish to delete this plane</p>
<br />
<br />
<dl class="dl-horizontal">
    <dt class="col-md-4">
        @Html.Label("Plane Type:")
    </dt>

    <dd>
        @type
    </dd>

    <dt class="col-md-4">
        @Html.Label("Call Sign:")
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Call_Sign)
    </dd>

    <dt class="col-md-4">
        @Html.Label("Hours Flown:")
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Hours_Flown)
    </dd>

    <dt class="col-md-4">
        @Html.Label("Hours until next service:")
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Hours_Until_Service)
    </dd>

    
</dl>
<button type="button" class="btn btn-info" onclick="location.href='@Url.Action("planeTypeScreen", "Planes", new { id = uID, typeId = Model.Plane_Type_ID })'">
    Back
</button>
<button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("deletePlaneConformation", "Planes", new { loggedId = uID, id = Model.Plane_ID })'">
    Delete
</button>

<script>
   function timer() {
        window.location.href = '/Sys_User/loginScreen';
    }
    window.oninput = setTimeout(timer, @time);
</script>