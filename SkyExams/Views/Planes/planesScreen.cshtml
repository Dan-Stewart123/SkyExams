            <img src="~/Content/Cessna172.jpeg" width="280px" height="150px" title="title" alt="additional title" />
        </div>
        <div class="card-footer">
            <button type="button" onclick="location.href='@Url.Action("planeTypeScreen", "Planes", new { id = Model.SysUser_ID, typeId = 1 })'">
                View Planes
            </button>
        </div>
    </div>
</div>
<div class="col-md-6">
    <div class="card">
        <div class="card-header"><h4>Cessna 172 RG</h4></div>
