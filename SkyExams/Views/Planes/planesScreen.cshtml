@model SkyExams.Models.Sys_User
@{
    ViewBag.Title = "planesScreen";
}

<h2>Planes</h2>
<br />
<br />
<div id="createButton" style="display:none;">
    <button type="button" onclick="location.href='@Url.Action("addPlaneScreen", "Planes", new { id = Model.SysUser_ID })'">
        Add Plane
    </button>
</div>
<br />
<br />
