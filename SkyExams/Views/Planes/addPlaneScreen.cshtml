@model IEnumerable<SkyExams.Models.Plane_Type>
@{
    ViewBag.Title = "addPlaneScreen";
    var uID = ViewData["userID"];
}

<h2>Add New Plane</h2>
<p>Please complete the following fields</p>

@using (Html.BeginForm("addPlaneScreen", "Planes", FormMethod.Post))
{
    <div style="display:none;">
        <input type="text" id="id" name="id" value="@uID">
    </div>
    <label class="col-md-3">@Html.Label("Plane Type:")</label>
    <select class="col-md-3" id="type" name="type">
        @foreach (var item in Model)
        {
            <option value="@item.Plane_Type_ID">@item.Type_Description</option>
        }
    </select>
    <label class="col-md-3">@Html.Label("Description:")</label>
    <input class="col-md-3" type="text" id="description" name="description">
    <br />
    <br />
    <label class="col-md-3">@Html.Label("Call Sign:")</label>
    <input class="col-md-3" type="text" id="sign" name="sign">
    <label class="col-md-3">@Html.Label("Hours Flown:")</label>
    <input class="col-md-3" type="number" id="hoursFlown" name="hoursFlown">
    <br />
    <br />
    <label class="col-md-3">@Html.Label("Hours Until Service:")</label>
    <input class="col-md-3" type="number" id="serviceHours" name="serviceHours">
    <br />
    <br />
    <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("PlanesScreen", "Planes", new { id = uID })'">
        Cancel
    </button>
    <input type="submit" , class="btn btn-primary" value="Submit" id="submitButton" disabled />
    <label>Hint: Complete all the fields for the submit button to enable.</label>
}

<script>
    function checkInput() {
        var type = $("#type").val();
        var desc = $("#description").val();
        var sign = $("#sign").val();
        var flown = $("#hoursFlown").val();
        var service = $("#serviceHours").val();
        if (type != "" && desc != "" && sign != "" && flown != "" && service != "") {
            document.getElementById("submitButton").disabled = false;
        }// no input
    }
    window.oninput = checkInput;

</script>

